<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Detail_EventActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/common_google_signin_btn_text_dark_focused"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/Image_event"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@mipmap/ic_launcher_round" />

                <TextView
                    android:id="@+id/Name_event"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Nombre evento"
                    android:textColor="@android:color/background_light" />

                <TextView
                    android:id="@+id/participants_event"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text='participantes : "numero"'
                    android:textColor="@color/common_google_signin_btn_text_dark_default" />

            </LinearLayout>

            <TextView
                android:id="@+id/inscribed_event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Participantes actuales: numero" />

            <TextView
                android:id="@+id/Info_event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Informacion evento" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>